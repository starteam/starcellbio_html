@defmixin gradient(POS, START_COLOR, END_COLOR, FALLBACK_COLOR) {
  background-color: FALLBACK_COLOR; /* fallback color if gradients are not supported */
  background-image: -webkit-linear-gradient(POS, START_COLOR, END_COLOR);               /* Chrome 10+,Safari 5.1+ */
  /* @alternate */ background-image: -moz-linear-gradient(POS, START_COLOR, END_COLOR); /* FF3.6+ */
  /* @alternate */ background-image: -ms-linear-gradient(POS, START_COLOR, END_COLOR);  /* IE10 */
  /* @alternate */ background-image: -o-linear-gradient(POS, START_COLOR, END_COLOR);   /* Opera 11.10+ */
}
.scb_s_assignments_view {
    height: 100%;
    width: 960px;
    background-color: #f4f6f8;
}

.scb_s_abstract {
    margin-top: 8px;
    text-align: justify;
    display: inline-block;
    vertical-align: top;
    min-height:350px;
    border-style: solid;
    border-width: 1px;
    border-color: #a0a0a0;
    border-radius: 8px;
    padding: 10px;
    width:644px;
    position: relative;
    padding-left:20px;
    padding-top:17px;
    font-size:10pt;
    @mixin gradient(top,#ffffff, #e9ebea, #ffffff);
    padding-bottom:50px;
}

.scb_s_abstract > h1 {
    font-size: 14pt;
    font-family: 'sourcesanspro-semibold';
}

.scb_s_abstract_title {
    color: #00abe6;
    font-size:14pt;
    font-family: 'sourcesanspro-semibold';
}

.assignments_block {
    left: 20px;
    right: 20px;
    border-style: solid;
    border-width: 1px;
    border-color: #a0a0a0;
    border-radius: 5px;
    background-color: #C0D0D0;
    display: block;
    padding: 10px;
}

